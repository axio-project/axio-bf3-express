{
    "app_name": "soc_echo",
    "enabled_components": ["soc"],
    "remote_host": [
        {
            "ipv4": "10.0.4.101",
            "mgnt_port": 20086,
            "data_port": 10010,
            "connect_to": ["soc"]
        }
    ],
    "local_host": [
        {
            "ipv4": "10.0.4.102",
            "mgnt_port": 20086,
            "data_port": 10010,
            "connect_to": ["soc"]
        }
    ],
    "dp_graph": [
        {
            "app_name": "soc_echo",
            "components": [ "root", "soc"]
        },
        {
            "component": "root",
            "ctrl_path":
            {
                "match": [ "udp.sport", "ipv4.sip" ],
                "action": [ "fwd", "drop" ],
                "entries": [
                    { 
                        "match": "udp.sport=10086",
                        "action": "fwd(soc)"
                    }
                ]
            }
        },
        {
            "component": "soc",
            "data_path": {
                "kernel_name": "soc_echo",
                "kernel_path": "/home/ubuntu/bf3_proj/nicc/examples/soc_echo/soc_kernel.soc.o"
            },
            "ctrl_path": {
                "match": [ "retval" ],
                "action": [ "fwd", "drop" ],
                "entries": [
                    { 
                        "match": "retval=1",
                        "action": "fwd(host)"
                    }
                ]
            }
        }
    ]
}
