{
	"doca_general_flags":{
		// -l - sets the log level for the application DEBUG=60, CRITICAL=20
		"log-level": 60,
	},
	"doca_program_flags":{
		// -p - RegEx device PCI address
		"pci-addr": "03:00.0",

		// -r - Path to compiled rules file (rof2.binary)
		"rules": "/tmp/regex_rules.rof2.binary",

		// -d - Path to data file
		"data": "/tmp/data_to_scan.txt",

		// -c - Chunk size of each job sent to the regex, use 0 to send the file as one chunk
		"chunk-size": 0,

		// -s - Number of bytes of overlap to use for huge jobs
		"overlap-size": 0,

		// -o - provide a path to the output of the CSV file
		"output-csv": "/tmp/results.csv"
	}
}
